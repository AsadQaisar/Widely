@model Widely.Models.tbl_User

@{
	ViewData["Title"] = "Withdraw";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Withdraw</h1>

<div>
	<h4>Balance Withdraw</h4>
	<hr />
	@Html.ValidationSummary(true, "", new {@class = "text-danger" })
	<dl class="row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Balance)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Balance)
		</dd>
	</dl>
	<div class="col-md-4">
		<form asp-action="Withdraw">
			<div class="form-group">
				<p>Amount to Withdraw</p>
				<input type="text" id="amt" name="Balance" class="form-control" />
			</div>
			<div class="form-group">
				<div class="form-group">
					<label asp-for="LoginPassword" class="control-label"></label>
					<input asp-for="LoginPassword" class="form-control" />
					<span asp-validation-for="LoginPassword" class="text-danger"></span>
				</div>
			</div>
			<div class="form-group">
				<input type="submit" value="Withdraw" class="btn btn-primary"/>
			</div>
		</form>
	</div>
</div>

